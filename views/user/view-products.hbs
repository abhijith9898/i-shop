 <section class="bg-color">
        <div class="container" style="padding-bottom: 50px; padding-top: 125px;">
            <div class="row">
                {{#each products}}
                <div class="col-md-3">
                    <div class="card" id="card-border" style="width: 16rem;">
                        <img class="card-img-top"
                            src="/images/{{this._id}}.jpg"
                            alt="Card image cap"
                            style="height: 10rem;">
                        <div class="card-body" style="height: 13rem">
                            <h5 class="card-title">{{this.Name}}</h5>
                            <p class="card-text">{{this.Description}}</p>
                            <a href="#" class="btn btn-primary">Add to Cart</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>