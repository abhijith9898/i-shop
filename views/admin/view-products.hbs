<section style="margin-top: 7%;">
    <div class="container">
        <div class="row">
            <a href="/admin/add-product" class="btn btn-success ml-auto" style="margin-bottom: 20px;">Add Product</a>
        </div>
        <table class="table">
            <thead style="color: whitesmoke">
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody style=" color: #b3b3b3">
                {{#each products}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.Name}}</td>
                    <td>{{this.Category}}</td>
                    <td>{{this.Description}}</td>
                    <td>{{this.Price}}</td>
                    <td><img style="width: 50px; height: 50px;" src="/images/{{this._id}}.jpg" alt=""></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>